<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:d="http://xamarin.com/schemas/2014/forms/design"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:controls="clr-namespace:MentalEdge.Controls"
             mc:Ignorable="d"
             x:Class="MentalEdge.Views.Set">
    <ContentPage.Content>
        <StackLayout>
            <Button  ImageSource="Frame.png" VerticalOptions="Center" HorizontalOptions="Start" WidthRequest="40" HeightRequest="40" Clicked="Button_Clicked"  BackgroundColor="Transparent"/>
            <ScrollView>
                <StackLayout Padding="20">
                    <Label Text="Today`s Performance" FontSize="24" TextColor="White" Margin="0,0,0,10"/>
                    <Label Text="Profit or Loss" FontSize="20" TextColor="White" Margin="0,10,0,10" />
                    <controls:MEEntry
                        x:Name="textbar1"
                        Margin="0,10,0,0"
                        Placeholder="$"
                        Keyboard="Numeric"
                        WidthRequest="10"
                        HeightRequest="60"
                        CornerRadius="10"
                        TextColor="White"
                        PlaceholderColor="White"
                        BackgroundColor="#2A2C36"/>
                    <Label Text="Stress Level" FontSize="20" TextColor="White" Margin="0,10,0,10"/>
                    <Grid x:Name="Selector" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" Scale="1">
                            <Image  Source="angrysmile.png"/>
                            <Label  Text="Train Wrec" FontSize="14" TranslationX="8" TextColor="White" VerticalOptions="EndAndExpand"/>
                        </StackLayout>
                        <StackLayout Grid.Column="1" Scale="0.5">
                            <Image Source="sadsmile.png"/>
                            <Label Text="Stressed" FontSize="11"  TextColor="White" VerticalOptions="End"/>
                        </StackLayout>
                        <StackLayout Grid.Column="2" Scale="0.5">
                            <Image  Source="smile.png"/>
                            <Label  Text="Neutral" FontSize="14"   TextColor="White" VerticalOptions="End"/>
                        </StackLayout>
                        <StackLayout Grid.Column="3" Scale="0.5">
                            <Image Source="nicesmile.png" />
                            <Label  Text="Relaxed" FontSize="13" TextColor="White"  VerticalOptions="End"/>
                        </StackLayout>
                        <StackLayout Grid.Column="4" Scale="0.5">
                            <Image  Source="coolsmile.png"/>
                            <Label Text="Cool"  FontSize="14" TextColor="White" TranslationX="7"  VerticalOptions="End"/>
                        </StackLayout>
                    </Grid>
                    <Slider Minimum="0"
                            Maximum="4"
                            ValueChanged="Slider_ValueChanged"
                            ThumbColor="{StaticResource Active}"
                            MinimumTrackColor="DarkGray"
                            MaximumTrackColor="DarkGray"/>

                    <Label Text="Sleep Quality" FontSize="20" TextColor="White" Margin="0,10,0,10"/>
                    <Grid x:Name="Selectortwo" >
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <StackLayout Grid.Column="0" Scale="1">
                            <Image  Source="angrysmile.png"/>
                            <Label  Text="Didn`t Sleep" FontSize="13" TranslationX="8" TextColor="White" VerticalOptions="EndAndExpand"/>
                        </StackLayout>
                        <StackLayout Grid.Column="1" Scale="0.5">
                            <Image Source="sadsmile.png"/>
                            <Label Text="Dificalty Sleeping" FontSize="12"  TextColor="White" VerticalOptions="End"/>
                        </StackLayout>
                        <StackLayout Grid.Column="2" Scale="0.5">
                                <Image  Source="smile.png"/>
                            <Label  Text="Slept Ok" FontSize="14" TranslationX="8"  TextColor="White" VerticalOptions="End"/>
                        </StackLayout>
                        <StackLayout Grid.Column="3" Scale="0.5">
                            <Image Source="nicesmile.png" />
                            <Label  Text="Slept good" FontSize="14" TranslationX="8" TextColor="White"  VerticalOptions="End"/>
                        </StackLayout>
                        <StackLayout Grid.Column="4" Scale="0.5">
                            <Image  Source="coolsmile.png"/>
                            <Label Text="slept like a baby"  FontSize="11" TextColor="White"   VerticalOptions="End"/>
                        </StackLayout>
                    </Grid>
                    <Slider Minimum="0"
                            Maximum="4"
                            ValueChanged="Slider_ValueChanged_1"
                            ThumbColor="{StaticResource Active}"
                            MinimumTrackColor="DarkGray"
                            MaximumTrackColor="DarkGray"/>
                    <Label Text="Positives" FontSize="20" TextColor="White" Margin="0,10,0,10"/>
                    <StackLayout Orientation="Horizontal">
                        <Button x:Name="Relaxed" TextColor="Gray" Text="Relaxed" Clicked="Relaxed_Clicked"/>
                        <Button x:Name="Grateful" TextColor="Gray" Text="Grateful" Clicked="Grateful_Clicked"/>
                        <Button x:Name="Happy" TextColor="Gray" Text="Happy" Clicked="Happy_Clicked"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button x:Name="Contents" TextColor="Gray" Text="Content" Clicked="Contents_Clicked"/>
                        <Button x:Name="Confident" TextColor="Gray" Text="Confident" Clicked="Confident_Clicked"/>
                    </StackLayout>
                    
                    <Label Text="Negatives" FontSize="20" TextColor="White" Margin="0,10,0,10"/>
                    <StackLayout Orientation="Horizontal">
                        <Button x:Name="FOMO" TextColor="Gray"  Text="FOMO" Clicked="FOMO_Clicked"/>
                        <Button x:Name="Chased" TextColor="Gray" Text="Chased" Clicked="Chased_Clicked"/>
                        <Button x:Name="BrokeRules" TextColor="Gray" Text="Broke Rules" Clicked="BrokeRules_Clicked"/>
                    </StackLayout>
                    <StackLayout Orientation="Horizontal">
                        <Button x:Name="Angry" TextColor="Gray" Text="Angry" Clicked="Angry_Clicked"/>
                    </StackLayout>

                    <Label Text="Comments" FontSize="20" TextColor="White" Margin="0,10,0,10"/>
                    <controls:MEEntry
                        x:Name="textbar2"
                        Margin="0,10,0,0"
                        Placeholder="Write your things"
                        WidthRequest="10"
                        HeightRequest="200"
                        CornerRadius="10"
                        TextColor="White"
                        FontSize="14"
                        VerticalTextAlignment="Start"
                        PlaceholderColor="Gray"/>

                </StackLayout>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
   