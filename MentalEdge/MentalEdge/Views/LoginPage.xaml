        <StackLayout                
            Grid.Row="1"
            VerticalOptions="Fill"
            HorizontalOptions="Center"
            Spacing="15">
            
            <Label 
                Grid.Row="1"
                Text="Login"
                FontSize="24"
                HorizontalOptions="Start"
                VerticalOptions="Center"
                TextColor="{StaticResource Key=me-white}"/>

            <StackLayout HorizontalOptions="Center" Spacing="5">

                <controls:MEEntry 
                    x:Name="email"
                    Placeholder="Email" 
                    Keyboard="Email"
                    WidthRequest="300" 
                    HeightRequest="50"
                    PlaceholderColor="Gray"
                    CornerRadius="10"/>
                
            </StackLayout>

            <StackLayout HorizontalOptions="Center" Spacing="5">

                <controls:MEEntry 
                    x:Name="password"
                    Placeholder="Password"
                    WidthRequest="300"
                    HeightRequest="50"
                    IsPassword="True" 
                    PlaceholderColor="Gray"
                    CornerRadius="10" />

                <Label Text="Forgot password?" TextColor="Gray" HorizontalOptions="End" />
                
            </StackLayout>
        </StackLayout>
        
        <StackLayout Grid.Row="2" Spacing="15">
            <Button
                Margin="50, 0, 50, 0"
                FontSize="16"
                Text="Login"
                TextColor="Black"
                BackgroundColor="{StaticResource Active}"
                Clicked="Button_Clicked"/>

            <Label 
                    Text="or" 
                    TextColor="Gray"
                    FontSize="18"
                    HorizontalOptions="Center" />

            <Button x:Name="create"
                Margin="50, 0, 50, 0"
                FontSize="16"
                    Text="Create Account"
                    VerticalOptions="End" />

        </StackLayout>
        
    </Grid>


